@model Restaurant.ViewModels.UsersViewModel
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/users.css")

<div class="row">
    <div class="col-md-6">
        <h3>Servers</h3>
    </div>
    <div class="col-md-6">
        @Html.ActionLink("Add Server", "AddUser", null, new {@class = "btn btn-success"})
    </div>
</div>
<hr/>
<table class="table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Server Number</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.FullName
                </td>
                <td>
                    @user.ServerNumber
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditUser", user, new {@class = "edit-link"})
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteUser", user, new{@class = "delete-link"})
                </td>
            </tr>
        }
    </tbody>
</table>