@model Restaurant.ViewModels.EditUserFormViewModel
@{
    ViewBag.Title = "EditUserForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Edit Server Info</h3>
<hr />

@if (ViewBag.message != null)
{
    <span class="field-validation-error">@ViewBag.message</span>
}

@using (Html.BeginForm("SaveUser", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(u => u.Id)


    <div class="form-group">
        @Html.LabelFor(u => u.FirstName)
        @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.LastName)
        @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.LastName)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


