@model Restaurant.ViewModels.MenuViewModel
@{
    ViewBag.Title = "Place Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/order-page.css")

<div class="row text-center">
    <h3>New Order</h3>
    @if (Session["serverName"] != null)
    {
        <h6>Server: @Session["serverName"].ToString()</h6>
    }

    @if (TempData["message"] != null)
    {
        <div>
            <span class="field-validation-error">@TempData["message"].ToString()</span>
        </div>
    }
</div>
@using (Html.BeginForm("BuildOrder", "Order", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <h5 class="app-label">Appetizers</h5>
        </div>
        @for (var i = 0; i < Model.Appetizers.Count; i++)
        {
            <div class="col-md-2 text-center app-item">
                <p class="item-name">@Model.Appetizers[i].Name</p>
                <p>$@Model.Appetizers[i].Price</p>
                @Html.HiddenFor(m => m.Appetizers[i].Price)
                @Html.HiddenFor(m => m.Appetizers[i].Name)
                @Html.LabelFor(m => m.Appetizers[i].Quantity)
                @Html.TextBoxFor(m => m.Appetizers[i].Quantity, new { type = "number", min="0", @class = "quantity-input form-control" })
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
            <h5 class="entree-label">Entrees</h5>
        </div>  
        @for (var i = 0; i < Model.Entrees.Count; i++)
        {
            <div class="col-md-2 text-center entree-item">
                <p class="item-name">@Model.Entrees[i].Name</p>
                <p>$@Model.Entrees[i].Price</p>
                @Html.HiddenFor(m => m.Entrees[i].Price)
                @Html.HiddenFor(m => m.Entrees[i].Name)
                @Html.LabelFor(m => m.Entrees[i].Quantity)
                @Html.TextBoxFor(m => m.Entrees[i].Quantity, new { type = "number", min = "0", @class = "quantity-input form-control" })
            </div>
        }         
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
            <h5 class="side-label">Sides</h5>
        </div>
        @for (var i = 0; i < Model.Sides.Count; i++)
        {
            <div class="col-md-2 text-center side-item">
                <p class="item-name">@Model.Sides[i].Name</p>
                <p>$@Model.Sides[i].Price</p>
                @Html.HiddenFor(m => m.Sides[i].Price)
                @Html.HiddenFor(m => m.Sides[i].Name)
                @Html.LabelFor(m => m.Sides[i].Quantity)
                @Html.TextBoxFor(m => m.Sides[i].Quantity, new { type = "number", min = "0", @class = "quantity-input form-control" })
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
            <h5 class="dessert-label">Desserts</h5>
        </div>
        @for (var i = 0; i < Model.Desserts.Count; i++)
        {
            <div class="col-md-2 text-center dessert-item">
                <p class="item-name">@Model.Desserts[i].Name</p>
                <p>$@Model.Desserts[i].Price</p>
                @Html.HiddenFor(m => m.Desserts[i].Price)
                @Html.HiddenFor(m => m.Desserts[i].Name)
                @Html.LabelFor(m => m.Desserts[i].Quantity)
                @Html.TextBoxFor(m => m.Desserts[i].Quantity, new { type = "number", min = "0", @class = "quantity-input form-control" })
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
            <h5 class="drink-label">Drinks</h5>
        </div>
        @for (var i = 0; i < Model.Drinks.Count; i++)
        {
            <div class="col-md-2 text-center drink-item">
                <p class="item-name">@Model.Drinks[i].Name</p>
                <p>$@Model.Drinks[i].Price</p>
                @Html.HiddenFor(m => m.Drinks[i].Price)
                @Html.HiddenFor(m => m.Drinks[i].Name)
                @Html.LabelFor(m => m.Drinks[i].Quantity)
                @Html.TextBoxFor(m => m.Drinks[i].Quantity, new { type = "number", min = "0", @class = "quantity-input form-control" })
            </div>
        }
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-12 text-center">
            @Html.LabelFor(m => m.SelectedDiscount, new {@class = "discount-label"})
            @Html.DropDownListFor(m => m.SelectedDiscount, new SelectList(Model.Discounts, "Percentage", "Name"), "None", new {@class = "form-control"})
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-block btn-primary review-btn">Review Order</button>
        </div>
    </div>
}
