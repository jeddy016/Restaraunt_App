@model Restaurant.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@if (ViewBag.message != null)
{
    <div>
        <span class="field-validation-error">@ViewBag.message</span>
    </div>
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(u=>u.ServerNumber)
        @Html.TextBoxFor(u=>u.ServerNumber, new {@class= "form-control"})
        @Html.ValidationMessageFor(u=>u.ServerNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(u=>u.Password)
        @Html.PasswordFor(u=>u.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(u=>u.Password)
    </div>  
    <button type="submit" class="btn btn-primary">Submit</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
